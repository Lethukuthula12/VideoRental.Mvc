@model IEnumerable<VideoRent.Models.Customers>  
@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>
@if (!Model.Any())
{
    <p>The're no customers saved yet!</p>
}
else
{
    <table class="table table-hover table-bordered">
        <tr>
            <theader>
            <th>Name</th>
            <th>Surname</th>
                <th>Membership Type</th>
            </theader>

        </tr>
        <tbody>


            @foreach (var customer in Model)
                {
                <tr><td>@Html.ActionLink(customer.Name, "Details", "Customers", new { id= customer.id}, null) </td><td> @customer.Surname</td><td>@customer.MembershipType.Name</td></tr>
            }
            




        </tbody>


    </table>

}



